            <TextBox x:Name="TBNumber" HorizontalAlignment="Left" Height="23" Margin="383,192,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="120"/>
            <TextBox x:Name="TBLife" HorizontalAlignment="Left" Height="23" Margin="253,224,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="120"/>
            <TextBox x:Name="TBCategories" HorizontalAlignment="Left" Height="23" Margin="255,255,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="120"/>
