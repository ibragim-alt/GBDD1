<Window x:Class="WpfApp1.WinTeam"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1"
        mc:Ignorable="d"
        Title="WinTeam" Height="450" Width="800">
    <Grid>
        <DataGrid x:Name="DataGridTeam"  HorizontalAlignment="Left" Height="274" Margin="16,10,0,0" VerticalAlignment="Top" Width="503"/>
        <ListBox x:Name="ListBoxPlayer" HorizontalAlignment="Left" Height="197" Margin="567,82,0,0" VerticalAlignment="Top" Width="187" RenderTransformOrigin="0.5,0.5">
            <ListBox.RenderTransform>
                <TransformGroup>
                    <ScaleTransform/>
                    <SkewTransform/>
                    <RotateTransform Angle="-0.104"/>
                    <TranslateTransform/>
                </TransformGroup>
            </ListBox.RenderTransform>
        </ListBox>
        <Button x:Name="ButtonTeam" Content="Состав" HorizontalAlignment="Left" Margin="605,334,0,0" VerticalAlignment="Top" Width="112" Height="41" Click="ButtonTeam_Click"/>

    </Grid>
</Window>
