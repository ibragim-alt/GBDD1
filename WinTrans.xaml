        <Grid HorizontalAlignment="Left" Height="55" Margin="2,361,0,0" VerticalAlignment="Top" Width="789" Background="#FFE0A9AF">
            <Button x:Name="ButtonAdd" Content="Добавить" HorizontalAlignment="Left" Margin="28,9,0,0" VerticalAlignment="Top" Width="105" Height="35" Click="ButtonAdd_Click"/>
        </Grid>
        <DataGrid x:Name="DGTrans"  HorizontalAlignment="Left" Height="278" Margin="1,82,0,0" VerticalAlignment="Top" Width="790" AlternatingRowBackground="#FFD1EEFC" RowBackground="#FFFFFCD6" />
        <Image Margin="5,5,713,341" Source="gibdd_logo (1).png" Stretch="Fill"/>
    </Grid>
</Window>
