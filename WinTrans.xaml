<Window x:Class="WpfApp2.WinTrans"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp2"
        mc:Ignorable="d"
        Title="WinTrans" Height="450" Width="800">
    <Grid>
        <Grid HorizontalAlignment="Left" Height="81" VerticalAlignment="Top" Width="791" Background="#FFE0A9AF">
            <Label x:Name="LabelHeader" Content="Транспортные средства" HorizontalAlignment="Left" Margin="179,7,0,0" VerticalAlignment="Top" Height="70" Width="412" FontSize="36"/>
